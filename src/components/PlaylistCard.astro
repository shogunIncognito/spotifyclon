---
import { Image } from "astro:assets";
import LikedSong from "../assets/liked-songs-640.png";

interface Props {
  playlist?: {
    playlist: string;
    canciones: {
      id: number;
      titulo: string;
      artista: string;
      album: string;
      fecha: string;
      duracion: string;
    }[];
  };
}

const { playlist } = Astro.props;

const playlistUrl = playlist?.playlist.split(" ").join("").toLowerCase();
---

<a href={playlistUrl}>
  <article
    class="flex w-48 min-w-fit h-full hover:bg-[#232323] transition-colors bg-[#292929] p-5 rounded flex-col justify-center"
  >
    <Image width={150} class="rounded" src={LikedSong} alt="likedsong" />
    <div class="flex flex-col gap-2 my-5">
      <h3 class="text-md font-bold">{playlist?.playlist || 'Playlist'}</h3>
      <small class="opacity-75 text-sm">{playlist?.canciones.length || 20} canciones</small>
    </div>
  </article>
</a>
